<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="100dp"
    card_view:cardBackgroundColor="#607D8B"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            card_view:srcCompat="@color/cardview_dark_background"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView"
            android:layout_toRightOf="@+id/space"
            android:layout_toEndOf="@+id/space" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/com_auth0_lock_ic_chevron"
            android:id="@+id/imageButton2"
            android:cropToPadding="false"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/cardview_shadow_end_color" />

        <TextView
            android:text="AUG\n20"
            android:layout_height="wrap_content"
            android:layout_width="62dp"
            android:id="@+id/textView8"
            android:layout_weight="0.06"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.54" />

            <TextView
                android:text="Dinner at Thurman's Cafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

            <TextView
                android:text="Invited by Luke M."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inviter_Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>