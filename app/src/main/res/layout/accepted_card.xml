<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:elevation="100dp"
    card_view:cardBackgroundColor="#619C97"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            card_view:srcCompat="@color/cardview_shadow_start_color"
            android:layout_alignParentTop="true"
            android:id="@+id/accentBlock"
            android:layout_toRightOf="@+id/space"
            android:layout_toEndOf="@+id/space" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.54"
            android:layout_alignRight="@+id/accentBlock"
            android:layout_alignEnd="@+id/accentBlock">

            <TextView
                android:text="AUG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/month"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textAlignment="center"
                android:layout_marginTop="11dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="20"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:id="@+id/dayNum"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <ImageButton
            card_view:srcCompat="@drawable/com_auth0_lock_ic_chevron"
            android:id="@+id/expandButton"
            android:cropToPadding="false"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:background="@color/cardview_shadow_end_color"
            android:scaleType="centerInside"
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="25dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/accentBlock"
            android:layout_width="220dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.54" />

            <TextView
                android:text="Dinner at Thurman's Cafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textAlignment="textStart" />

            <TextView
                android:text="3:00 PM  |  Accepted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inviter_Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:textAlignment="textStart" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>